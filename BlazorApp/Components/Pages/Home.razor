                <div class="transaction-icon">
                    <span>&#8644;</span>
                </div>

                <div class="transaction-text">
                    <div class="transaction-description">Transaction</div>
                    <div class="transaction-name">Joel Kenley</div>
                </div>
                <div class="transaction-amount">-$68.00</div>
            </div>

            <div class="transaction">
                <div class="transaction-icon">
                    <span>&#8644;</span>
                </div>

                <div class="transaction-text">
                    <div class="transaction-description">Transaction</div>
                    <div class="transaction-name">Mark Smith</div>
                </div>
                <div class="transaction-amount">-$68.00</div>
            </div>

            <div class="transaction">
                <div class="transaction-icon">
                    <span>&#8644;</span>
                </div>

                <div class="transaction-text">
                    <div class="transaction-description">Transaction</div>
                    <div class="transaction-name">Lenen Roy</div>
                </div>
                <div class="transaction-amount">-$68.00</div>
            </div>

        </div>
