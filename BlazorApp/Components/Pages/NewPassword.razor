@page "/NewPassword"

@rendermode InteractiveServer

<PageTitle>Set New Password</PageTitle>

<div class="recovery-container">
    <h2>Set New Password</h2>
    <p>Please enter and confirm your new password.</p>

    <div class="input-group">
        <input type="password" placeholder="New Password" class="input-field" @bind="newPassword" />
    </div>
    <div class="input-group">
        <input type="password" placeholder="Confirm New Password" class="input-field" @bind="confirmPassword" />
    </div>

    <button class="btn-primary" @onclick="CheckPasswords">Set Password</button>

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert alert-info">@message</div>
    }
</div>

@code {
    private string newPassword = string.Empty;
    private string confirmPassword = string.Empty;
    private string message = string.Empty;

    private void CheckPasswords()
    {
        if (newPassword == confirmPassword)
        {
            message = "New Password Set";
        }
        else
        {
            message = "Passwords do not match";
        }
    }
}
